{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for Moonsway",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:event:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "binaries/pocketbase", "sidecar": true, "args": true }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "binaries/pocketbase", "sidecar": true, "args": true }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill"
  ]
}
